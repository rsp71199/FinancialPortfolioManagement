<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="2"
    android:backgroundTint="@color/primary"
    android:background="@color/primaryExtraLight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shortName"
            android:layout_gravity="right"
            android:gravity="left"
            android:textColor="@color/White"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:text="NIFTY 50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:gravity="center"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_weight="1"
                android:src="@drawable/time"
                android:layout_height="20dp"></ImageView>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/previousMarketPrice"
                android:layout_weight="1"
                android:textColor="@color/GreenYellow"
                android:textSize="15sp"
                android:text="+48.75(+0.44%)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/regularMarketPrice"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="11,598.30"
            android:textColor="@color/White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/regularMarketChange"
            android:layout_gravity="right"
            android:textColor="@color/GreenYellow"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:textSize="15sp"
            android:text="+48.75(+0.44%)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
</LinearLayout>